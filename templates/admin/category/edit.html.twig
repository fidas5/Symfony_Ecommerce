{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Category</h1>

        {# Display any success or error messages #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {# Start the form for editing the category #}
        {{ form_start(categoryForm) }}
        
        <div class="form-group">
            {{ form_label(categoryForm.name) }}
            {{ form_widget(categoryForm.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(categoryForm.name) }}
        </div>

        <div class="form-group">
            {{ form_label(categoryForm.parent) }}
            {{ form_widget(categoryForm.parent, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(categoryForm.parent) }}
        </div>

        <div class="form-group">
            {{ form_label(categoryForm.categoryOrder) }}
            {{ form_widget(categoryForm.categoryOrder, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(categoryForm.categoryOrder) }}
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="{{ path('admin_category_index') }}" class="btn btn-secondary">Back to Categories</a>

        {{ form_end(categoryForm) }}
    </div>
{% endblock %}
