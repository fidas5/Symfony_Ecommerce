{% extends 'base.html.twig' %}

{% block title %}{{'app_index.home'|trans}}{% endblock %}

{% block body %}
    <div class="col-12 text-white">
    
        <h1><b>{{'app_index.title'|trans}}</b></h1>
        <p>{{'app_index.description'|trans}}</p>
    </div>
    <hr class="hr" />
    <div class="d-flex  flex-wrap">
        {% for category in categories %}
            {% if category.parent == null %}
                <div class="col-12 text-white mt-2">
                    <h2>{{ category.name }}</h2>
                    <hr class="hr" />
                </div>
            {% else %}
                <div class="col-4 mb-4">
                    <div class="card h-100 m-2">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h3 class="card-title">{{ category.name }}</h3>
                            <a href="{{ path('category_list', {slug: category.slug}) }}" class="btn btn-primary"> {{'app_index.see'|trans}} </a>
                        </div>
                    </div>
                </div>    
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
